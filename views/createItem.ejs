<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Andika+New+Basic:wght@700&family=Roboto:wght@300&display=swap" rel="stylesheet">

  <script src="https://kit.fontawesome.com/231fbd9d95.js" crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/create.css">
</head>

<body>
  <div class="header">
    <a class="btn btn-outline-primary" style="position: absolute; margin-top: 10px; left: 50px;" href="/" role="button"><i class="fas fa-home"></i> Home</a>
    <a class="btn btn-outline-primary" style="position: absolute; right: 50px; margin-top: 10px;" href="/create" role="button"><i class="fas fa-plus-circle"></i> Create</a>
    <a class="btn btn-outline-primary" style="position: absolute; right: 150px; margin-top: 10px;" href="/user" role="button"><i class="fas fa-user"></i> Profile</a>
  </div>

  <div class="item-top">
    <div class="top-left">
      <label>
        <input type="file" accept="image/jpeg" style="display:none" onchange="encodeImageFileAsURL(this)">
        <img class="main_img" src="https://buybay.s3.amazonaws.com/default/item-main-img-reminder.jpg">
      </label>
    </div>
    <div class="top-right">
      <div class="top-right-block">
        <h1 class="item-name">Item Name:</h1>
        <input type="text" class="form-control item-name item-name-input" maxlength="50" placeholder="Your Item Name">
      </div>
      <div class="top-right-block">
        <h1 class="item-name">Price:</h1>
        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text item-price" style="border-top-left-radius:20px; border-bottom-left-radius:20px; background-color:#a8d8ea">$</span>
          </div>
          <input pattern="[0-9]" onKeyDown="if((this.value.length>=4 && event.keyCode>47 && event.keyCode < 58) || (event.keyCode === 190) || (event.keyCode === 187)|| (event.keyCode === 189))return false;" type="number" min="0" max="9999"
            placeholder="0-9999" class="form-control item-price item-price-input">
        </div>
      </div>

    </div>
  </div>

  <hr>

  <div class="description-block">
    <h2>Description</h2>
    <div class="paragraph">
      <textarea oninput="auto_grow(this)" class="form-control description-text" placeholder="Describe your item. The max length for one paragraph is 200 characters. You can add another paragraph." maxlength="200"></textarea>
      <button style="display:none" class="btn btn-outline-danger delete-para-btn" type="button"><i class="fas fa-trash-alt"></i></button>
    </div>
    <button class="btn btn-outline-primary add-para-btn" type="button"><i class="fas fa-plus"></i> Add new paragraph</button>
    <div class="item-images">
      <button class="btn btn-outline-primary add-img-btn" type="button"><i class="fas fa-plus"></i> Add new image</button>
    </div>
    <p class="end-of-description">End of description</p>
  </div>
  <button class="btn btn-outline-primary save-btn" type="submit"><i class="fas fa-cloud-upload-alt"></i> Submit</button>

  <div class="" style="height: 100px; width: 100%">

  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/js/create.js"></script>
  <script type="text/javascript">
    function encodeImageFileAsURL(element) {
      var file = element.files[0];
      var reader = new FileReader();
      reader.onloadend = function() {
        $('.main_img').attr("src", reader.result);
        // console.log('RESULT', reader.result)
      }
      reader.readAsDataURL(file);
    }

    function auto_grow(element) {
      element.style.height = "100px";
      element.style.height = (element.scrollHeight) + "px";
    }
  </script>
</body>

</html>
