<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title><%= item.item_name %></title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Andika+New+Basic:wght@700&family=Roboto:wght@300&display=swap" rel="stylesheet">

  <script src="https://kit.fontawesome.com/231fbd9d95.js" crossorigin="anonymous"></script>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/item.css">
</head>

<body>
  <div class="header">
    <a class="btn btn-outline-primary" style="position: absolute; margin-top: 10px; left: 50px;" href="/" role="button"><i class="fas fa-home"></i> Home</a>
    <a class="btn btn-outline-primary" style="position: absolute; right: 20px; margin-top: 10px;" href="/logout" role="button"><i class="fas fa-sign-out-alt"></i> Log out</a>
    <a class="btn btn-outline-primary" style="position: absolute; right: 130px; margin-top: 10px;" href="/create" role="button"><i class="fas fa-plus-circle"></i> Create</a>
    <a class="btn btn-outline-primary" style="position: absolute; right: 230px; margin-top: 10px;" href="/user" role="button"><i class="fas fa-user"></i> Profile</a>
  </div>

  <div class="item-top">
    <div class="top-left">
      <img class="main_img" src="<%= item.main_image_url %>" alt="">
    </div>
    <div class="top-right">
      <div class="top-block">
        <h1 class="item-name"><%= item.item_name %></h1>
      </div>
      <div class="top-block">
        <p class="time-and-name"><%= item.user_name %> / <%= item.post_time %></p>
        <p id="uid" style="display:none"><%= item.uid %></p>
      </div>
      <div class="top-right-left">
        <p class="status-and-visited-num"><%= item.status %></p>
        <p class="status-and-visited-num"><i class="far fa-eye"></i> <%= item.num_visits %></p>
      </div>
      <div class="top-right-right">
        <% if (isOwner) { %>
        <a class="btn btn-outline-primary top-btn" id="edit-btn" href="#" role="button"><i class="fas fa-edit"></i> EDIT</a>
        <% } else { %>
        <a class="btn btn-outline-primary top-btn" id="want-btn" href="#" role="button">WANT</a>
        <% } %>

        <p>$<%= item.price %></p>
      </div>
    </div>
  </div>

  <hr>

  <div class="description-block">
    <h2>Description</h2>
    <% item.description.forEach(function(des) { %>
    <p class="description-content"><%= des %></p>
    <% }) %>


    <div class="item-images">
      <% item.img_urls.forEach(function(url) { %>
      <img class="item-image" src="<%= url %>" alt="">
      <% }) %>
    </div>
    <p class="end-of-description">End of description</p>
  </div>


  <hr>

  <div class="messages-block">
    <h2>Comments</h2>
    <% item.messages.forEach(function(msg) { %>
    <div class="message">
      <p class="message-content"><%= msg.content %></p>
      <p class="message-time"><%= msg.user_name %> / <%= msg.post_time %></p>
    </div>
    <% }) %>
    <form class="" action="/writeComment" method="post">
      <textarea name="comment" class="form-control comment-text" placeholder="Add new comment. The max length is 200 characters." rows="3" maxlength="200"></textarea>
      <button class="btn btn-outline-primary comment-btn" type="submit">Write New Comment</button>
    </form>
    <p class="end-of-comment">End of comments</p>
  </div>
  <div class="" style="height: 80px; width: 100%">

  </div>
  <footer>
      <p>Copyright â“’ 2020</p>
  </footer>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/js/main.js"></script>
  <script type="text/javascript">
    $('.time-and-name').click(function() {
      window.location.href = window.location.href.split('item')[0] + "user/" + $('#uid').text();
    })
  </script>
</body>

</html>
